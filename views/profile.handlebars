<main class="container">
    <h1>My Profile</h1>

    <h2>{{displayName}}</h2>
    
    <div class="profile-info">
        <p><strong>Email:</strong> {{email}}</p>
        <p><strong>Total Reviews:</strong> {{reviewCount}}</p>
    </div>

    <div class="profile-content">
        <div class="profile-reviews">
            <h2>My Reviews</h2>
            
            {{#if reviews}}
                <div class="reviews-list">
                    {{#each reviews}}
                        <div class="review-card">
                            <h3>
                                <a class="store-link" href="/stores/{{store._id}}">{{store.name}}</a>
                            </h3>
                            <p><strong>Rating:</strong> {{rating}}/5 ‚≠ê</p>
                            <p><strong>Review:</strong> {{comment}}</p>
                            <p class="review-date">{{formatDateTime updated_at}}</p>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p>You haven't reviewed any stores yet. <a class="explore-link" href="/">Start exploring!</a></p>
            {{/if}}
        </div>

       
        <div class="profile-notes">
            <h2>My Private Notes</h2>

            {{#if privateNotes}}
                <div class="notes-list">
                    {{#each privateNotes}}
                        <div class="note-card">
                            <h3>
                                <a class="store-link" href="/stores/{{store._id}}">{{store.name}}</a>
                            </h3>
                            <p><strong>Note:</strong> {{text}}</p>
                            <p class="note-date">{{formatDateTime updated_at}}</p>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p>You haven't saved any private notes yet.</p>
            {{/if}}
        </div>
    </div>
</main>
